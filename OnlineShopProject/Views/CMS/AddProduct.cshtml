@model OnlineShopProject.Models.ProductForm
@{
    Layout = "_CMS";
}
<h1>Add Product</h1>

<p>@ViewBag.msg</p>

<form method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="ProductName">Product Name </label>
        <input type="text" asp-for="ProductName" />
        <span asp-validation-for="ProductName" class="error"></span>
    </div>


    <div>
        <label asp-for="PrDescription">Product Description</label>
        <textarea asp-for="PrDescription"></textarea>
    </div>

    <div>
        <label asp-for="Image">Product Image</label>
        <input asp-for="Image" />
    </div>

    <div>
        <label asp-for="PrColor">Product Color</label>
        <textarea asp-for="PrColor"></textarea>
    </div>

    <div>
        <label asp-for="PrSize">Product Size</label>
        <input type="text" asp-for="PrSize" />
        <span asp-validation-for="PrSize" class="error"></span>
    </div>


    <div>
        <label asp-for="PrPrice">Product Price</label>
        <input type="text" asp-for="PrPrice" />
        <span asp-validation-for="PrPrice" class="error"></span>
    </div>

    <div>
        <label asp-for="PrPriceSale">Price on Sale</label>
        <input type="text" asp-for="PrPriceSale" />
        <span asp-validation-for="PrPriceSale" class="error"></span>
    </div>

    <div>
        <label asp-for="DateTime">Date Added</label>
        <input type="date" asp-for="DateTime" />
        <span asp-validation-for="DateTime" class="error"></span>
    </div>

    <div>
        <input type="submit" value="Add" class="add" />
    </div>

</form>